<uwsgi>
    <socket>/opt/helixproject/helixauth/run/helixauth.sock</socket>
    <pidfile>/opt/helixproject/helixauth/run/helixauth.pid</pidfile>
    <chmod-socket>660</chmod-socket>
    <chown-socket>helixauth:helixproject</chown-socket>

    <auto-procname/>
    <procname-prefix>helixauth</procname-prefix>
    <master/>
    <plugins>python</plugins>
    <virtualenv>/opt/helixproject/helixauth/.env</virtualenv>
    <pythonpath>/opt/helixproject/helixauth/helixcore/src/</pythonpath>
    <pythonpath>/opt/helixproject/helixauth/helixauth/src/</pythonpath>
    <touch-reload>/opt/helixproject/helixauth/helixauth/uwsgi/uwsgi.xml</touch-reload>
    <workers>5</workers>
    <module>helixauth.wsgi.uwsgi_app</module>
    <mule>/opt/helixproject/helixauth/helixauth/uwsgi/scripts/mule_sessions_cleaner.py</mule>
    <mule>/opt/helixproject/helixauth/helixauth/uwsgi/scripts/mule_sessions_dumper.py</mule>
</uwsgi>
