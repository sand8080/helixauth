#!/bin/sh
# preinst script for buildme
#
# see: dh_installdeb(1)

#set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)

        if ! getent passwd helixbilling > /dev/null; then
            echo "Adding user helixbilling"
            adduser --system --quiet --no-create-home \
                --shell /bin/false  --group --gecos "helixbilling user" helixbilling
        fi

        echo "Installing eventlet"
        easy_install eventlet

        echo "Installing iso8601"
        easy_install iso8601
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


