server {
    listen       1052;
    server_name  localhost;

    access_log  /var/log/nginx/helixbilling.access.log;
    error_log  /var/log/nginx/helixbilling.error.log;

    keepalive_timeout       70;
    ssl                     on;

    ssl_certificate         /etc/nginx/sites-available/helixbilling-ssl/webdrive.crt;
    ssl_certificate_key     /etc/nginx/sites-available/helixbilling-ssl/webdrive.key;
    ssl_session_timeout     10m;

    location / {
        proxy_pass          http://localhost:9998;
        proxy_redirect      off;
    }
}
